<script>
  $(document).ready(function (){
    $('#usertable').DataTable();
  })
</script>
<h1 class="text-center text-danger">Users Table with Location</h1>
<%= link_to 'New User', new_user_path, class:'btn btn-primary btn-lg mb-4', data: {bs_toggle: 'modal', bs_target: '#newUserModal', remote: true} %>
<table class="table table-bordered table-striped table-hover mt-3" id="usertable">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Phone</th>
      <th>Location</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.phone %></td>
        <td><%= user.place.location %> </td>
        <td>
        <%= link_to 'Edit', edit_user_path(user), class:'btn btn-warning btn-sm',  data: {bs_toggle: 'modal', bs_target: '#editUserModal', remote: true}  %>&nbsp;&nbsp;
        <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<!-- Modal -->
<div class="modal fade" id="newUserModal" tabindex="-1" role="dialog" aria-labelledby="newUserModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newUserModalLabel">Add New User</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div id="newUserForm">
      </div>
      
    </div>
  </div>
</div>

<div class="modal fade" id="editUserModal" tabindex="-1" role="dialog" aria-labelledby="editUserModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editUserModalLabel">Edit User</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div id="editUserForm">
      </div>
      
    </div>
  </div>
</div>



